<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>
            <% if (errors) { %>
                <ul class="notice">
                    <% errors.array().forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>


                    <div class="login-form">
                        <form id="loginForm" action="/account/login" method="post">
                            <fieldset>
                                <legend>Login</legend>
                                <label for="email">Email:</label>
                                <input type="email" name="account_email" id="email" required
                                    value="<%= locals.account_email %>">
                                <label for="accountPassword">Password:</label>
                                <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital
                                    letter
                                    and 1 special character</span>
                                <input type="password" name="account_password" id="accountPassword" required
                                    pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
                                <button type="submit">Login</button>
                            </fieldset>
                        </form>
                        <p>No account? <a href="/account/register">Sign-up</a></p>