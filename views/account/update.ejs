<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>
            <% if (errors && errors.length) { %>
                <ul class="notice">
                    <% errors.forEach(error=> { %>
                        <li>
                            <%= error.msg %>
                        </li>
                        <% }) %>
                </ul>
                <% } %>
                    <!--Account Update Form-->
                    <div id="updateContainer">
                        <p>Update Account Information</p>
                        <form action="/account/update" method="post">
                            <label for="firstname">First Name:</label>
                            <input type="text" name="account_firstname" id="accountFirstname" required
                                value="<%= locals.account_firstname %>">

                            <label for="lastname">Last Name:</label>
                            <input type="text" name="account_lastname" id="lastname" size="10" required
                                value="<%= locals.account_lastname %>">

                            <label for=" email">Email:</label>
                            <input type="email" name="account_email" id="email"
                                placeholder="Enter a valid email address" required value="<%= locals.account_email %>">

                            <input type="hidden" name="account_id" value="<%= accountData.account_id %>">

                            <button type="submit">Update Account</button>
                        </form>
                    </div>

                    <!--change password form-->
                    <div id="changePasswordContainer">
                        <p>Change Password</p>
                        <form action="/account/update-password" method="post">
                            <label for="accountPassword">New Password:</label>
                            <span>Passwords must be at least 12 characters and contain at least 1 number, 1 capital
                                letter and 1 special character</span>
                            <input type="password" name="account_password" id="accountPassword" required>
                            <input type="hidden" name="account_id" value="<%= accountData.account_id %>">
                            <button type="submit">Update Password</button>
                        </form>
                    </div>