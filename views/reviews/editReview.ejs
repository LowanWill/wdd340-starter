<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
    <% } else { res.redirect('/') } %>

        <%- messages() %>

            <form id="review-form" action="/reviews/editReview" method="post">




                <% if (errors) { %>
                    <ul class="notice">
                        <% errors.array().forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>

                        <div>
                            <label for="review_text">Review</label>
                            <textarea name="review_text" id="review_text" placeholder="Write your review here..."
                                required <%=locals.review_text %>></textarea>
                        </div>


                        <button type="submit">Submit Update</button>


                        <input type="hidden" name="account_id" value="<%= locals.account_id %>">
                        <input type="hidden" name="inv_id" value="<%= locals.inv_id %>">
            </form>