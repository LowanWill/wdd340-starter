<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div id="tools">
        <% if (locals.accountData) { %>
            <!-- When logged in: show welcome & logout -->
            <span class="welcome">
                <a href="/account/">
                    <%= locals.accountData.account_firstname %>
                </a>
            </span>
            <form action="/account/logout" method="get">
                <button type="submit">Logout</button>
            </form>
            <% } else { %>
                <!-- When not logged in: show MyÂ Account link -->
                <a href="/account/login" title="Click to log in">My Account</a>
                <% } %>
    </div>
</header>